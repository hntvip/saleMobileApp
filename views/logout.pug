extends layout

block content
  h1 #{title}
  p Welcome to #{title}
   p error #{error}
  div.signin-form.profile
    h3 Register
    
    div.login-form
      form(action='/signup' method='post')
        div.form-group.row
          label.col-sm-2.col-form-label(for="email") Email 
          input.col-sm-10.form-control(type='text' name='email' value=body.email placeholder='E-mail' required)
        div.form-group.row
          label.col-sm-2.col-form-label(for="username") Username
          input.col-sm-10.form-control(type='text'  name='username' value=body.email placeholder='Username' required)
        div.form-group.row
          label.col-sm-2.col-form-label(for="password") Password
          input.col-sm-10.form-control(type='password'  name='password' value=body.email  placeholder='Password' required)
        div.form-group.row
          label.col-sm-2.col-form-label(for="passwordConf") Password confirm 
          input.col-sm-10.form-control(type='password' name='passwordConf' value=body.email  placeholder='Confirm Password' required)

        input.btn.btn-primary.mb-2(type='submit' value='REGISTER')   
    p 
      a(href='#') By clicking register, I agree to your termsap